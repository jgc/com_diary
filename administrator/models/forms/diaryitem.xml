<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_DIARY_FORM_LBL_DIARYITEM_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_DIARY_FORM_LBL_DIARYITEM_CREATED_BY"
            description="COM_DIARY_FORM_DESC_DIARYITEM_CREATED_BY"  /> 

       <field name="dname" type="text"
                
            label="COM_DIARY_FORM_LBL_DIARYITEM_DNAME"
            description="COM_DIARY_FORM_DESC_DIARYITEM_DNAME" 
                
                
                 required="true" 
            size="20"
            maxlength="25" /> 

       <field name="ditemdate" type="calendar"
                
            label="COM_DIARY_FORM_LBL_DIARYITEM_DITEMDATE"
            description="COM_DIARY_FORM_DESC_DIARYITEM_DITEMDATE" 
                
                
                 required="true"  /> 

       <field name="notes" type="textarea"
                
            label="COM_DIARY_FORM_LBL_DIARYITEM_NOTES"
            description="COM_DIARY_FORM_DESC_DIARYITEM_NOTES" 
                
                
                
            cols="100"
            rows="8" /> 

       <field name="createdby" type="createdby" default="" 
            label="COM_DIARY_FORM_LBL_DIARYITEM_CREATEDBY"
            description="COM_DIARY_FORM_DESC_DIARYITEM_CREATEDBY"  /> 

       <field name="created" type="timecreated" default="" 
            label="COM_DIARY_FORM_LBL_DIARYITEM_CREATED"
            description="COM_DIARY_FORM_DESC_DIARYITEM_CREATED"  /> 

       <field name="updated" type="timeupdated" default="" 
            label="COM_DIARY_FORM_LBL_DIARYITEM_UPDATED"
            description="COM_DIARY_FORM_DESC_DIARYITEM_UPDATED"  /> 

       <field name="fileupload" type="file"
                
            label="COM_DIARY_FORM_LBL_DIARYITEM_FILEUPLOAD"
            description="COM_DIARY_FORM_DESC_DIARYITEM_FILEUPLOAD" 
                
                
                /> 

       <field name="dint" type="integer"
                
            label="COM_DIARY_FORM_LBL_DIARYITEM_DINT"
            description="COM_DIARY_FORM_DESC_DIARYITEM_DINT" 
                
                
                
            filter="raw"
            first="0"
            last="1"
            step="5" /> 

       <field name="checkbox" type="checkbox"
                
            label="COM_DIARY_FORM_LBL_DIARYITEM_CHECKBOX"
            description="COM_DIARY_FORM_DESC_DIARYITEM_CHECKBOX" 
                
                
                
            value="0"
            filter="raw" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" /> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_diary"
                            section="diaryitem"
                        />

	</fieldset>

</form>
